@model Orlik.Web.ViewModels.Account.AccountResetPasswordViewModel

@{
    ViewBag.Title = "Resetowanie hasła";
}

<div class="resetpassword-title">
    <h1>Resetowanie hasła</h1>
</div>

<div class="resetpassword-wrapper">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <div class="resetpassword-label">
                    @Html.Label("Adres email", new { @class = "control-label" })
                </div>
                <div>
                    @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control center-block"}})
                    @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                </div>
            </div>

            <div style="padding-top: 50px;">
                <div>
                    <input type="submit" value="Resetuj hasło" class="btn btn-default center-block" />
                </div>
            </div>
        </div>
    }
</div>

