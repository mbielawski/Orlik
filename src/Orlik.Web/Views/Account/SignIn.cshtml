@model Orlik.Web.ViewModels.Account.AccountSignInViewModel

@{
    ViewBag.Title = "Zaloguj się";
}
<div class="signin-title">
    <h1>Logowanie</h1>
</div>

<div class="signin-wrapper">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group text-center">
                @Html.Label("Nazwa użytkownika")
                <div>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control center-block" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-center">
                @Html.Label("Hasło")
                <div>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control center-block" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="Zaloguj" class="btn btn-default center-block" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    <div class="sigin-text">
        <p>Nie masz jeszcze konta?</p>
    </div>
    <div class="btn btn-signin btn-block center-block">
        @Html.ActionLink("Zarejestruj się", "Register", "Users", null, new {@class = "link-start"})
    </div>
    <div class="sigin-text">
        <p>Nie pamiętasz hasła?</p>
    </div>
    <div class="btn btn-signin btn-block center-block">
        @Html.ActionLink("Nie pamiętam hasła", "ResetPassword", "Account", null, new {@class = "link-start"})
    </div>
</div>

