@model Orlik.Web.ViewModels.Account.AccountResetPasswordConfirmedViewModel

@{
    ViewBag.Title = "Resetowanie hasła";
}

<div class="resetpasswordconfirmed-title">
    <h1>Wprowadź nowe hasło</h1>
</div>

<div class="signin-wrapper">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group text-center">
                @Html.Label("Email")
                <div>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control center-block" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center">
                @Html.Label("Nowe hasło")
                <div>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control center-block" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding-top: 10px;">
                <div>
                    <input type="submit" value="Zmień hasło" class="btn btn-default center-block" />
                </div>
            </div>
        </div>
    }
</div>