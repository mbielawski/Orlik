@model Orlik.Web.ViewModels.Users.UsersRegisterViewModel

@{
    ViewBag.Title = "Rejestracja";
}

<div class="register-title">
    <h1>Rejestracja</h1>
</div>

<div class="register-wrapper">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>
            <div class="register-label">
                @Html.Label("Nazwa użytkownika", new {@class = "control-label"})
            </div>
            <div>
                @Html.EditorFor(model => model.Username, new {htmlAttributes = new {@class = "form-control center-block"}})
                @Html.ValidationMessageFor(model => model.Username, "", new {@class = "text-danger"})
            </div>
        </div>

        <div>
            <div class="register-label">
                @Html.Label("Hasło", new {@class = "control-label"})
            </div>
            <div>
                @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control center-block"}})
                @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
            </div>
        </div>

        <div>
            <div class="register-label">
                @Html.Label("Imię", new {@class = "control-label"})
            </div>
            <div>
                @Html.EditorFor(model => model.FirstName, new {htmlAttributes = new {@class = "form-control center-block"}})
                @Html.ValidationMessageFor(model => model.FirstName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div>   
            <div class="register-label">
                @Html.Label("Nazwisko", new {@class = "control-label text-center"})
            </div>
            <div>
                @Html.EditorFor(model => model.SecondName, new {htmlAttributes = new {@class = "form-control center-block"}})
                @Html.ValidationMessageFor(model => model.SecondName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div>
            <div class="register-label">
                @Html.Label("Adres email", new { @class = "control-label" })
            </div>
            <div>
                @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control center-block"}})
                @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
            </div>
        </div>

        <div style="padding-top: 10px;">
            <div>
                <input type="submit" value="Utwórz konto" class="btn btn-default center-block" />
            </div>
        </div>
    </div>
}
</div>

<div>
    <div class="register-text">
        <p>Masz już konto?</p>
    </div>
    <div class="btn btn-signin btn-block center-block">
        @Html.ActionLink("Zaloguj się", "SignIn", "Account", null, new { @class = "link-start" })
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
